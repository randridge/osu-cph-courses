% New environment that will print exercise numbers
% Also automatically numbers the problems
% Two arguments are #1=module (e.g., 1A, 1B); #2=text of problem
\newcounter{exernum}

\newcommand{\exercise}[2]{
\small
  \stepcounter{exernum}
  {\bf \red{Exercise #1.\theexernum}}\\ 
  #2
}

